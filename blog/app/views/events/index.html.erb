<h1>Listing events</h1>


<%= form_tag(events_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search " %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></button>
    </div>
  <% end %>
  <%= yield %>

 

<% @events.each do |event| %>
  <div class="event">
    <h1 class="event-place"><%= link_to event.place, event %></h1>
  
  </div>
<% end %>


<table>
  <tr>
    <th>Date</th>
    <th>Time</th>
      <th>Place</th>
        <th>Description</th>
  </tr>
 
  <% @events.each do |event| %>
    <tr>
      <td><%= event.date %></td>
      <td><%= event.time %></td>
            <td><%= event.place %></td>
      <td><%= event.description %></td>

    </tr>
  <% end %>
</table>