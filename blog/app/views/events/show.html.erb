<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @event.time %>
</p>
 
<p>
  <strong>Place:</strong>
  <%= @event.place %>
  
  
</p>
 
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<h2>Questions  and  Replies </h2>
<%= render @event.questions %>
 
<h2>Ask a question:</h2>
<%= form_for([@event, @event.questions.build]) do |f| %>
 <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
    <p>
    <%= f.submit"ask" %>
  </p>
  <% end %>
<h2>reply:</h2>
<%= form_for([@event, @event.questions.build]) do |f| %>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit"reply" %>
  </p>
<% end %>

