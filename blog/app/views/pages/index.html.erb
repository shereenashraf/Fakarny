<h1>Listing Pages</h1>



<%= form_tag(pages_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search " %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></button>
    </div>
  <% end %>
  <%= yield %>






<%= link_to 'New Page', new_page_path %>



<table>
  <tr>
   <th>Page Name</th>
   <th colspan="2"></th>
   <th>Text</th>
  </tr>

  <% @pages.each do |page| %>

    <tr>
      <td><%= page.providername %></td>

      <br> <td><%= link_to 'Show', page_path(page) %></td> 
       <td><%= link_to 'Edit', edit_page_path(page) %></td> </br>
  <%= link_to 'Ask a question', controller: 'askproviders' %>     

       </tr>


</table>




<% end %>
<%= link_to 'Back', pages_path %>
  




 

