<h2>Comments</h2>
<% @askprovider.answers.each do |answer| %>

  <p>
    <strong>Comment:</strong>
    <%= answer.body %>
  </p>
<% end %>

<%= form_for([@askprovider, @askprovider.answers.build]) do |f| %>
  <p>
    <%= f.label :answerer %><br>
    <%= f.text_field :answerer %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>